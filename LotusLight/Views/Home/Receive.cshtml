@model LotusLight.Models.Receive

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>華光功德會｜虛擬帳號取號</title>
    <link rel="stylesheet" href="~/assets/css/page.css">
    <link rel="icon" href="~/assets/img/elements/ivcon.png">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>

<body>
    <div class="wrap border guide">
        <div class="container border">
            <main class="guidePage border">
                <header>
                    <nav>
                        <a href="@Url.Action("Imdex", "Home")">
                            <img src="~/assets/img/elements/huaGuangLogo_02.png" alt="">
                            <div>
                                <p>社團法人</p>
                                <img src="~/assets/img/elements/huaGuangName.png" alt="">
                            </div>
                        </a>
                    </nav>
                </header>
                <main>
                    <div class="guideContents border">
                        <div class="guideTitleBlock border">
                            <p class="mainTitle">@(Model.Code.Equals("000") ? "繳款帳號取號成功！" : "繳款帳號取號失敗！")</p>
                        </div>
                        <div class="contentBlock border">
                            @if (!Model.Code.Equals("000"))
                            {
                                <p><strong style="color:red;">錯誤碼：@Model.Code。錯誤訊息：@Model.Message</strong></p>
                            }
                            <p>感謝您的善心，請將以下繳款帳號及金額以抄寫或截圖的方式保存。</p>
                            <p>
                                付款方式為【虛擬帳號】，可利用EATM、網路銀行、ATM進行匯款。<br>
                                付款方式為【超商繳費】，請至您選擇的超商內利用「互動式資訊服務站」輸入代碼列印繳費單。
                            </p>
                            <p>
                                「互動式資訊服務站」<br>
                                統一超商：ibon<br>
                                全家便利商店：FamiPort<br>
                                萊爾富便利商店：Life-ET<br>
                                OK便利商店：OK‧go
                            </p>
                            <p>匯款/繳款後才會完成捐贈唷！</p>
                            <p style="color:red;">※ 本帳號有時效性，請注意繳款期限及金額不可輸入錯誤！</p>
                        </div>
                        <table class="guideTable border">
                            <thead>
                                <tr class="notesField"><td colspan="2">單位：新台幣</td></tr>
                                <tr class="titleField"><td colspan="2">捐款明細</td></tr>
                            </thead>
                            <tbody>
                                <tr class="contentField"><th>流水編號</th><td>@Model.OrderNo</td></tr>
                                <tr class="contentField"><th>付款方式</th><td>@Model.PayTypeName</td></tr>
                                @if (Model.PayType.Equals("2"))
                                {
                                    <tr class="contentField"><th>銀行代號</th><td>@Model.BankNo</td></tr>
                                    <tr class="contentField"><th>虛擬帳號</th><td>@Model.AtmNo</td></tr>
                                }
                                else
                                {
                                    <tr class="contentField"><th>繳款代號</th><td>@Model.PayCode</td></tr>
                                }
                                <tr class="contentField"><th>繳費期限</th><td>@Model.PayEndDate</td></tr>
                                <tr class="contentField"><th>繳費金額</th><td class="price">@Model.Amount.ToString("#,##0")<span> 元</span></td></tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2">
                                        <div class="btnClose">
                                            <p>關閉視窗</p>
                                        </div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </main>
            </main>
        </div>
    </div>

    <script>
        $(document).ready(() => {
            $(".btnClose").click(() => {
                window.close();
            });
        });
    </script>

</body>
</html>

