@model LotusLight.Models.Return

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>華光功德會｜付款通知</title>
    <link rel="stylesheet" href="~/assets/css/page.css">
    <link rel="icon" href="~/assets/img/elements/ivcon.png">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>

<body>
    <div class="wrap border guide">
        <div class="container border">
            <main class="guidePage border">
                <header>
                    <nav>
                        <a href="@Url.Action("Imdex", "Home")">
                            <img src="~/assets/img/elements/huaGuangLogo_02.png" alt="">
                            <div>
                                <p>社團法人</p>
                                <img src="~/assets/img/elements/huaGuangName.png" alt="">
                            </div>
                        </a>
                    </nav>
                </header>
                <main>
                    <div class="guideContents border">
                        <div class="guideTitleBlock border">
                            <p class="mainTitle">@(Model.Code.Equals("000") ? "付款成功！" : "付款失敗！")</p>
                        </div>
                        @if (!Model.Code.Equals("000"))
                        {
                            <div class="contentBlock border">

                                <p><strong style="color:red;">錯誤碼：@Model.Code。錯誤訊息：@Model.Message</strong></p>

                            </div>
                        }
                        <table class="guideTable border">
                            <thead>
                                <tr class="notesField"><td colspan="2">單位：新台幣</td></tr>
                                <tr class="titleField"><td colspan="2">捐款明細</td></tr>
                            </thead>
                            <tbody>
                                <tr class="contentField"><th>流水編號</th><td>@Model.OrderNo</td></tr>
                                <tr class="contentField"><th>交易金額</th><td class="price">@Model.Amount.ToString("#,##0")<span> 元</span></td></tr>
                                <tr class="contentField"><th>授權時間</th><td class="price">@Model.AuthTime</td></tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2">
                                        <div class="btnClose">
                                            <p>關閉視窗</p>
                                        </div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </main>
            </main>
        </div>
    </div>

    <script>
        $(document).ready(() => {
            $(".btnClose").click(() => {
                window.close();
            });
        });
    </script>

</body>
</html>

